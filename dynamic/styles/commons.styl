.wrapper
    @extends .center-wrapper

.page-header
    margin: var(--two-units) 0 var(--unit) 0

.page-heading
    margin-top: var(--six-units)
    text-align: center

.page-title
    font-size: var(--xxxl)
    font-weight: 900
    color: primary
    display: inline-block
    line-height: 1
    border-bottom: 6px solid currentColor

.page-subtitle
    margin-top: var(--semi-unit)
    font-size: var(--l)
    font-weight: 600

.page-footer
    border-top: 1px solid dark
    margin-top: var(--two-units)
    padding: var(--semi-unit) 0
    font-size: var(--s)

.s1 + .s1
    margin-top: var(--unit)

.h1
    font-size: var(--xl)
    font-family: heading-font

.h2
    font-size: var(--l)
    font-family: heading-font

.h3
    font-family: heading-font


